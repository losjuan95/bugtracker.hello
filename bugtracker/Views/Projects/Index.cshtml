@model IEnumerable<bugtracker.Models.Project>
    @using bugtracker.Helpers

@{
    ViewBag.Title = "Index";
    var projHelper = new ProjectHelpers();
}

<div class="container-fluid">

    <!-- Page Content -->

    <hr>
    <h2>Projects</h2>
    @if (User.IsInRole("PM") || User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayName("Project Manager")
            </th>
            <th>
                @Html.DisplayName("Submitters")
            </th>
            <th>
                @Html.DisplayName("Developers")
            </th>
            <th></th>
        </tr>
     
        @foreach (var project in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(item => project.Name)
            </td>

            <td>
                @Html.DisplayFor(item => project.Description)
            </td>
            <td>
                @projHelper.GetProjectUserRoles("PM", project.Id).FirstOrDefault()
            </td>

            <td>
                @foreach (var sub in projHelper.GetProjectUserRoles("Sub", project.Id).ToList())
                {
                    @sub <br />
                }
            </td>

            <td>
                @foreach (var dev in projHelper.GetProjectUserRoles("Devs", project.Id).ToList())
                {
                    @dev <br />
                }
            </td>

            @if (User.IsInRole("PM") || User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = project.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = project.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = project.Id }) |
                    @Html.ActionLink("Assign", "AssignProjectUsers", "Admin", new { id = project.Id}, null)
                </td>

            }
            else if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = project.Id })
                </td>
            }

        </tr>
        }



    </table>


</div>
