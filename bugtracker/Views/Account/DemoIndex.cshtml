@{
    ViewBag.Title = "DemoIndex";
    Layout = null;
}

@using bugtracker.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <title>CoreTracker</title>

    <!-- Favicons -->

    <link href="~/img/core icon.jpg" rel="icon" />


    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--external css-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/style.css" rel="stylesheet" />

    <link href="~/Content/style-responsive.css" rel="stylesheet" />
    @*css images*@
    <link href="~/custom Css/demoindex.css" rel="stylesheet" />
    <!-- =======================================================
      Template Name: Dashio
      Template URL: https://templatemag.com/dashio-bootstrap-admin-template/
      Author: TemplateMag.com
      License: https://templatemag.com/license/
    ======================================================= -->
</head>

<body>
    <section>
        <section>
            <div class="row">

                <div class="col-md-12">

                    <div class="custom-box">
                        <div class="servicetitle">
                            <h4>Roles</h4>
                            <hr>
                        </div>
                        <div class="icn-main-container">

                        </div>
                        <p></p>
                        <ul class="pricing">
                            <li>Each User in this Application has a different role that plays a different funtion</li>
                            <li>The <strong>Developer</strong> is a role that will be assigned a ticket to a project within the application that he/she may be working on</li>
                            <li>The <strong>Submitter</strong> is a role where the user will be assigned to a project and be able to submit a ticket</li>
                            <li>The <strong>Project Manager</strong> is a role where the user will be able to assign a project to a developer and also has the abiltiy to make new projects</li>
                            <li>The <strong>Admin</strong> is a role where the user will be able to view all tickets and projects that will be given out within the application. Also has the ability to edit and delete information regarding these projects and tickets</li>

                        </ul>
                        <div class="pricing footer">
                            <a href="@Url.Action("FirstPage", "Account")">

                                <span class="btn btn-primary">Go Back?</span>
                            </a>

                        </div>
                    </div>
                    <!-- end custombox -->
                </div>
            </div>
            <div class="row">
                <div class="container-fluid">
                    <div class="col-lg-12">
                        <div class="col-md-3">
                            <div class="custom-box">
                                <div class="servicetitle">
                                    <h4>Developer</h4>
                                    <hr>
                                </div>
                                <div class="icn-main-container">
                                    <img class="img-circle" src="~/img/silhoutte3.jpg" width="155" />
                                </div>
                                <p></p>
                                <ul class="pricing"></ul>
                                <div class="pricing footer">
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("Role", "DemoDevs@mailinator.com")
                                        <button type="submit" class="btn btn-primary btn-block" role="button">Login</button>
                                    }
                                </div>
                            </div>
                            <!-- end custombox -->
                        </div>
                        <div class="col-md-3">
                            <div class="custom-box">
                                <div class="servicetitle">
                                    <h4>Submitter</h4>
                                    <hr>
                                </div>
                                <div class="icn-main-container">
                                    <img class="img-circle" src="~/img/silhoutte2.jpg" width="100" />
                                </div>
                                <p></p>
                                <ul class="pricing"></ul>
                                <div class="pricing footer">
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("Role", "DemoSub@mailinator.com")
                                  
                                        <button type="submit" class="btn btn-primary btn-block " role="button">Login</button>

                                       
                                    }
                                </div>
                            </div>

                            <!-- end custombox -->
                        </div>
                        <!-- end col-4 -->
                        <div class="col-md-3">
                            <div class="custom-box">
                                <div class="servicetitle">
                                    <h4>Project Manager</h4>
                                    <hr>
                                </div>
                                <div class="icn-main-container">
                                    <img class="img-circle" src="~/img/silhoutte4.jpg" width="100" />
                                </div>
                                <p></p>
                                <ul class="pricing"></ul>
                                <div class="pricing footer">
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("Role", "DemoPM@mailinator.com")
                                        <button type="submit" class="btn btn-primary btn-block" role="button">Login</button>
                                    }
                                </div>
                            </div>
                            <!-- end custombox -->
                        </div>
                        <!-- end col-4 -->
                        <div class="col-md-3">
                            <div class="custom-box">
                                <div class="servicetitle">
                                    <h4>Admin</h4>
                                    <hr>
                                </div>
                                <div class="icn-main-container">
                                    <img class="img-circle" src="~/img/silhoutte5.jpg" width="100" />
                                </div>
                                <p></p>
                                <ul class="pricing"></ul>
                                <div class="pricing footer">
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("Role", "DemoAdmin@mailinator.com")
                                        <button type="submit" class="btn btn-primary btn-block" role="button">Login</button>
                                    }
                                </div>
                            </div>
                            <!-- end custombox -->
                        </div>




                    </div>
                </div>

                <!--  /col-lg-12 -->
            </div>
            <!--  /row -->
        </section>
        <!-- /wrapper -->
    </section>
</body>

</html>




